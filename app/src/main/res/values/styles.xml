<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="boxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="box1" parent="boxStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="box2" parent="boxStyle">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/green</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="box3" parent="boxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="box4" parent="box3">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="box5" parent="box3">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/purple_200</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

</resources>